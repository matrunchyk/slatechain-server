{
  "name": "jscoin-wallet",
  "version": "0.1.1",
  "description": "JsCoin crypto-currency server",
  "repository": {
    "type": "git",
    "url": "https://github.com/matrunchyk/jscoin-wallet"
  },
  "author": "Serhii Matrunchyk",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/jscoin.js",
    "watch-node": "nodemon --ignore data/ dist/jscoin.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --ignore data/ --inspect dist/jscoin.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "apollo-server": "^2.3.1",
    "async": "^2.6.1",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "faker": "^4.1.0",
    "fs-extra": "^7.0.1",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "jsonwebtoken": "^8.4.0",
    "lodash.merge": "^4.6.1",
    "lusca": "^1.6.1",
    "moment": "^2.23.0",
    "pascal-case": "^2.0.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "require-all": "^3.0.0",
    "validator": "^10.10.0",
    "winston": "^2.4.4",
    "lodash.pick": "^4.4.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.50",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.35",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-graphql": "^0.6.2",
    "@types/faker": "^4.1.4",
    "@types/fs-extra": "^5.0.4",
    "@types/graphql": "^14.0.4",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash.merge": "^4.6.4",
    "@types/lodash.pick": "^4.4.4",
    "@types/lusca": "^1.5.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.41",
    "@types/pascal-case": "^1.1.2",
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.7.9",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^10.9.0",
    "chai": "^4.2.0",
    "concurrently": "^3.6.1",
    "jest": "^22.4.4",
    "nodemon": "^1.18.9",
    "shelljs": "^0.8.3",
    "supertest": "^3.3.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^5.0.1",
    "tslint": "^5.12.0",
    "typescript": "^2.9.2"
  }
}
